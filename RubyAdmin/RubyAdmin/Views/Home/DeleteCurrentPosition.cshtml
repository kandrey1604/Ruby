    ViewBag.Title = "Удаление занимающей должности";
}

<div>
    <dl class="dl-horizontal">
        <dt>Название</dt>
        <dd>
            @Html.DisplayFor(model => model.NameCurrentPosition)
        </dd>
    </dl>

    <div>
        <form asp-controller="Home" asp-action="DeleteCurrentPosition" method="post">
