@model RubyAdmin.Models.StructureOfEmployee

@{
    ViewData["Title"] = "Изменение состава сотрудников";
}

<h1>Изменение</h1>

<h4>Состав сотрудников</h4>
<hr/>
<div class="row">
    <div class="col-md-4">
        <form asp-action="EditStructureOfUserProperty">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="IdStructureOfEmployee" />
            <div class="form-group">
                <label asp-for="PropertyId" class="control-label">Код недвижимости</label>
                <input type="number" asp-for="PropertyId" class="form-control" required min="0" />
                <span asp-validation-for="PropertyId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EmployeeId" class="control-label">Код сотрудника</label>
                <input type="number" asp-for="EmployeeId" class="form-control" required min="0" />
                <span asp-validation-for="EmployeeId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CurrentPositionId" class="control-label">Код должности</label>
                <input type="number" asp-for="CurrentPositionId" class="form-control" required min="0" />
                <span asp-validation-for="CurrentPositionId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Изменить" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="IndexStructureOfEmployee">Назад</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }
