@model RubyAdmin.Models.TypeProperty

@{
    ViewData["Title"] = "Изменение вида недвижимости";
}

<h1>Изменение</h1>

<h4>Вид недвижимости</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="EditTypeProperty">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="IdTypeProperty" />
            <div class="form-group">
                <label asp-for="TypePropertyName" class="control-label">Название</label>
                <input asp-for="TypePropertyName" class="form-control" required maxlength="50" />
                <span asp-validation-for="TypePropertyName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Изменить" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="IndexTypeProperty">Назад</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }
