@model RubyAdmin.Models.UserCard
@{
    ViewBag.Title = "Удаление карты пользователя";
}

<div>
    <dl class="dl-horizontal">
        <dt>Номер</dt>
        <dd>
            @Html.DisplayFor(model => model.CardNumber)
        </dd>
        <dt>Имя</dt>
        <dd>
            @Html.DisplayFor(model => model.CardHolder)
        </dd>
        <dt>Код</dt>
        <dd>
            @Html.DisplayFor(model => model.Validity)
        </dd>
        <dt>Пользователь</dt>
        <dd>
            @Html.DisplayFor(model => model.UserId)
        </dd>
    </dl>
    <div>
        <form asp-controller="Home" asp-action="DeleteUserCard" method="post">
            <div class="form-group">
                <input type="submit" class="btn btn-default" value="Удалить" />
            </div>
        </form>
    </div>
</div>
