@model RubyAdmin.Models.Employee
@{
    ViewBag.Title = "Добавление сотрудника";
}
<form asp-action="CreateEmployee" asp-controller="home">
    <div class="form-group">
        <label asp-for="FirstNameEmployee" class="control-label">Фамилия</label>
        <input type="text" asp-for="FirstNameEmployee" class="form-control" required/>
        <span asp-validation-for="FirstNameEmployee" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="SecondNameEmployee" class="control-label">Имя</label>
        <input type="text" asp-for="SecondNameEmployee" class="form-control" required/>
        <span asp-validation-for="MiddleNameEmployee" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="MiddleNameEmployee" class="control-label">Отчество</label>
        <input type="text" asp-for="MiddleNameEmployee" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="LoginEmployee" class="control-label">Логин</label>
        <input type="email" asp-for="LoginEmployee" class="form-control" required maxlength="100"/>
        <span asp-validation-for="LoginEmployee" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="PasswordEmployee" class="control-label">Пароль  </label>
        <input type="password" asp-for="PasswordEmployee" class="form-control" required maxlength="32"/>
        <span asp-validation-for="PasswordEmployee" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input type="submit" value="Добавить" class="btn btn-default" />
    </div>
</form>

<div>
    <a asp-action="IndexEmployee">Назад</a>
</div>
