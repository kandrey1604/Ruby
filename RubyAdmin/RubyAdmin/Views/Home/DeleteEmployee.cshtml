@model RubyAdmin.Models.Employee
@{
    ViewBag.Title = "Удаление сотрудника";
}

<div>
    <dl class="dl-horizontal">
        <dt>Фамилия</dt>
        <dd>
            @Html.DisplayFor(model => model.FirstNameEmployee)
        </dd>
        <dt>Имя</dt>
        <dd>
            @Html.DisplayFor(model => model.SecondNameEmployee)
        </dd>
        <dt>Отчество</dt>
        <dd>
            @Html.DisplayFor(model => model.MiddleNameEmployee)
        </dd>
        <dt>Логин</dt>
        <dd>
            @Html.DisplayFor(model => model.LoginEmployee)
        </dd>
        <dt>Пароль</dt>
        <dd>
            @Html.DisplayFor(model => model.PasswordEmployee)
        </dd>
    </dl>

    <div>
        <form asp-controller="Home" asp-action="DeleteEmployee" method="post">
            <div class="form-group">
                <input type="submit" class="btn btn-default" value="Удалить" />
            </div>
        </form>
    </div>
</div>
