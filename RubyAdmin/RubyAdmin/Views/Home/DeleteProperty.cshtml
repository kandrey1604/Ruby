@model RubyAdmin.Models.Property
@{
    ViewBag.Title = "Удаление недвижимости";
}

<div>
    <dl class="dl-horizontal">
        <dt>Название</dt>
        <dd>
            @Html.DisplayFor(model => model.NameProperty)
        </dd>

        <dt>Изображение</dt>
        <dd>
            @Html.DisplayFor(model => model.Image)
        </dd>
        <dt>Местоположение</dt>
        <dd>
            @Html.DisplayFor(model => model.Location)
        </dd>
        <dt>Площадь</dt>
        <dd>
            @Html.DisplayFor(model => model.Square)
        </dd>
        <dt>Спальни</dt>
        <dd>
            @Html.DisplayFor(model => model.BedroomCount)
        </dd>
        <dt>Кухни</dt>
        <dd>
            @Html.DisplayFor(model => model.KitchenCount)
        </dd>
        <dt>Ванные</dt>
        <dd>
            @Html.DisplayFor(model => model.BathroomCount)
        </dd>
        <dt>Цена</dt>
        <dd>
            @Html.DisplayFor(model => model.Price)
        </dd>
        <dt>Вид недвижимости</dt>
        <dd>
            @Html.DisplayFor(model => model.TypePropertyId)
        </dd>
    </dl>

    <div>
        <form asp-controller="Home" asp-action="DeleteProperty" method="post">
            <div class="form-group">
                <input type="submit" class="btn btn-default" value="Удалить" />
            </div>
        </form>
    </div>
</div>
